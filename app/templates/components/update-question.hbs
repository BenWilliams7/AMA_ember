{{#if updateQuestionForm}}
  <h1>Update Question</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="ask">Question</label>
        {{input value=ask id="ask" placeholder=question.ask}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="note">Note</label>
        {{input value=note id="note" placeholder=question.note}}
      </div>

      <button {{action 'update' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'updateQuestionForm'}}>Update Question</button>
{{/if}}
